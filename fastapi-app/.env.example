# Database Configuration
DATABASE_URL=postgresql://user:password@postgres:5432/filemanager
SQLALCHEMY_DATABASE_URL=postgresql://user:password@postgres:5432/filemanager

# File Upload Settings
MAX_FILE_SIZE_MB=10
ALLOWED_MIME_TYPES=image/jpeg,image/png,application/pdf,text/plain

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Upload Directory
UPLOAD_DIR=uploads